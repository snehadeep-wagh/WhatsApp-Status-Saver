<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".fragments.InfoFragment"
    android:backgroundTint="@android:color/transparent"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:elevation="40dp"
        app:cardCornerRadius="30dp"
        android:backgroundTint="#97000000">

        <LinearLayout
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
            android:background="@android:color/transparent"
            android:backgroundTint="@android:color/transparent"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cantora_one"
                android:padding="10dp"
                android:text="@string/info_head"
                android:textSize="22sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cantora_one"
                android:padding="10dp"
                android:text="@string/info_step1"
                android:textSize="18sp"
                android:textColor="@color/white"
                />

                <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cantora_one"
                android:padding="10dp"
                android:text="@string/info_step2"
                android:textSize="18sp"
                    android:textColor="@color/white"
                />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cantora_one"
                    android:padding="10dp"
                    android:text="@string/info_step3"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OK"
                    android:fontFamily="@font/cantora_one"
                    android:padding="10dp"
                    android:textSize="18sp"
                    android:layout_gravity="end|bottom"
                    android:id="@+id/okButtonId"
                    android:textColor="#FCFCFC"
                    android:clickable="true"
                    android:focusable="true"
                    />

            </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>